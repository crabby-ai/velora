# Velora Environment Variables Example
# Copy this file to .env and customize for your needs
# DO NOT commit .env to version control!

# =============================================================================
# EXCHANGE API CREDENTIALS
# =============================================================================
# For security, always use environment variables for API keys

# Binance
VELORA_EXCHANGES_BINANCE_API_KEY=your_binance_api_key
VELORA_EXCHANGES_BINANCE_API_SECRET=your_binance_api_secret
VELORA_EXCHANGES_BINANCE_TESTNET=true

# Coinbase
# VELORA_EXCHANGES_COINBASE_API_KEY=your_coinbase_api_key
# VELORA_EXCHANGES_COINBASE_API_SECRET=your_coinbase_api_secret

# =============================================================================
# ENGINE CONFIGURATION
# =============================================================================

# Backtesting
VELORA_ENGINE_BACKTEST_INITIAL_CAPITAL=10000
VELORA_ENGINE_BACKTEST_COMMISSION_RATE=0.001
VELORA_ENGINE_BACKTEST_SLIPPAGE_RATE=0.0001

# Live Trading
VELORA_ENGINE_LIVE_DRY_RUN=true
VELORA_ENGINE_LIVE_ORDER_TIMEOUT_SECONDS=30
VELORA_ENGINE_LIVE_POSITION_CHECK_INTERVAL_MS=1000

# =============================================================================
# RISK MANAGEMENT
# =============================================================================

VELORA_RISK_MAX_POSITION_SIZE=1000
VELORA_RISK_MAX_TOTAL_EXPOSURE=10000
VELORA_RISK_MAX_DRAWDOWN_PERCENT=20
VELORA_RISK_MAX_DAILY_LOSS=500

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

VELORA_DATABASE_BACKEND=inmemory  # Options: inmemory, questdb, timescaledb

# QuestDB (if using questdb backend)
# VELORA_DATABASE_QUESTDB_HOST=localhost
# VELORA_DATABASE_QUESTDB_PG_PORT=8812
# VELORA_DATABASE_QUESTDB_HTTP_PORT=9000
# VELORA_DATABASE_QUESTDB_ILP_PORT=9009
# VELORA_DATABASE_QUESTDB_DATABASE=qdb
# VELORA_DATABASE_QUESTDB_USERNAME=admin
# VELORA_DATABASE_QUESTDB_PASSWORD=quest
# VELORA_DATABASE_QUESTDB_POOL_SIZE=10

# TimescaleDB (if using timescaledb backend)
# VELORA_DATABASE_TIMESCALEDB_HOST=localhost
# VELORA_DATABASE_TIMESCALEDB_PORT=5432
# VELORA_DATABASE_TIMESCALEDB_DATABASE=velora
# VELORA_DATABASE_TIMESCALEDB_USERNAME=postgres
# VELORA_DATABASE_TIMESCALEDB_PASSWORD=your_secure_password
# VELORA_DATABASE_TIMESCALEDB_POOL_SIZE=10
# VELORA_DATABASE_TIMESCALEDB_SSL=false

# =============================================================================
# LOGGING
# =============================================================================

VELORA_LOGGING_LEVEL=info  # Options: trace, debug, info, warn, error
# VELORA_LOGGING_FILE=/var/log/velora/velora.log

# =============================================================================
# RATE LIMITING
# =============================================================================

VELORA_RATE_LIMIT_REQUESTS_PER_SECOND=10
VELORA_RATE_LIMIT_ORDERS_PER_SECOND=5
